          {{#link-to "helper"}}
              <p class="iconfont xsd-clearfix">&#xe690;<span>帮助</span></p>
          {{/link-to}}
        </li>
        <li class="changeable">
            <a onclick={{action "storeOrigin" config.apiUrl3 config.domain}}>
                <p class="xsd-font-size12 xsd-clearfix"><i class="iconfont">&#xe673;</i><span>集中式</span></p>
            </a>
        </li>
    </ul>
