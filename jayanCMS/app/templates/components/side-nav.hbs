<div id="nav">
    <div id="top" class="iconfont">
        <img src="../images/logo_blue.png" alt="">
    </div>
    <ul id="center">
        <li class={{data-menus "index"}}>
          {{#link-to "index"}}
              <p class="iconfont font-size22 xsd-clearfix"><i class="icon icon-xsdgeneralsituation xsd-font-size22"></i><span>概况</span></p>
          {{/link-to}}
        </li>
        {{#if auth.e_power.crm_manage_view}}
        <li class={{data-menus "work"}}>
          {{#link-to "work"}}
            <p class="iconfont font-size22 xsd-clearfix">&#xe6aa;<span>派单</span></p>
          {{/link-to}}
        </li>
        {{/if}}
      {{#if auth.e_power.base_view}}
          <li id="separate-management_a" class={{data-menus "separate-management"}}>
            {{#link-to "rental.separate-management"}}
                <p class="iconfont xsd-clearfix">&#xe694;<span>租务</span></p>
            {{/link-to}}
          </li>
      {{/if}}
      {{#if auth.e_power.finance_manage_view}}
