            {{#link-to "finance.payment" (query-params orderby='-trade_at')}}
                <p class="iconfont xsd-clearfix">&#xe68d;<span>账务</span></p>
            {{/link-to}}
          </li>
      {{/if}}
      {{#if auth.e_power.reports_view}}

          <li id="nav-side-report" class={{data-menus "report"}}>

            {{#if (eq auth.user.vip_level 1)}}
              {{#link-to "report.day-report"}}
                  <p class="iconfont xsd-clearfix">&#xe696;<span>报表</span></p>
              {{/link-to}}
            {{else}}
              {{#link-to "report.report-ad"}}
                  <p class="iconfont xsd-clearfix">&#xe696;<span>报表</span></p>
              {{/link-to}}
            {{/if}}
          </li>
      {{/if}}

      {{#if (eq auth.user.role "boss")}}
        {{#if (eq auth.user.vip_level 1)}}
          <li id="nav-side-statistic" class={{data-menus "statistic"}}>
            {{#link-to "statistic.operation"}}
              <p class="iconfont xsd-clearfix">&#xe6ba;<span>统计</span></p>
            {{/link-to}}
          </li>
        {{else}}
          <li id="nav-side-statistic" class={{data-menus "statistic"}}>
            {{#link-to "statistic.ad"}}
              <p class="iconfont xsd-clearfix">&#xe6ba;<span>统计</span></p>
            {{/link-to}}
          </li>
        {{/if}}
      {{else if auth.e_power.statistics_view}}
        {{#if (eq auth.user.vip_level 1)}}
          <li id="nav-side-statistic" class={{data-menus "statistic"}}>
            {{#link-to "statistic.operation"}}
              <p class="iconfont xsd-clearfix">&#xe6ba;<span>统计</span></p>
            {{/link-to}}
          </li>
        {{else}}
          <li cid="nav-side-statistic" lass={{data-menus "statistic"}}>
            {{#link-to "statistic.ad"}}
              <p class="iconfont xsd-clearfix">&#xe6ba;<span>统计</span></p>
            {{/link-to}}
          </li>
        {{/if}}
      {{/if}}

      {{#if (eq auth.user.role "boss")}}
          <li class={{data-menus "authority"}}>
            {{#link-to "authority.index"}}
                <p class="iconfont xsd-clearfix">&#xe692;<span>权限</span></p>
            {{/link-to}}
          </li>
      {{/if}}
        <li class={{data-menus "service"}}>
          {{#link-to "service" class="serverNav"}}
              <p class="iconfont font-size22 xsd-clearfix">&#xe695;<span>服务</span></p>
