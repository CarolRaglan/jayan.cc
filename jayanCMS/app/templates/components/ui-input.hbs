<label>
  <span>{{title}}{{#if required}}<i>*</i>{{/if}}</span>
  {{#if error}}
    <span class="tips-error">{{tips}}</span>
  {{/if}}
</label>
<div class="xsd-input-group">
  {{#if (eq type "date")}}
    {{#if disabled}}
      <input type="text" class="xsd-input" name={{name}} value={{value}} disabled>
    {{else}}
      {{pikaday-input class="xsd-input"
                      name=name
                      value=value
                      format=format
                      readonly="readonly"
                      change=(action 'dateChange')
                      onSelection=(action 'dateSelection')}}
      <i class="iconfont">&#xe63e;</i>
    {{/if}}
  {{else}}
    <input class="xsd-input" type="text"
           name={{name}}  value={{value}}
           placeholder={{placeholder}}
             disabled={{readonly}}
           onchange={{action "change"}} onkeyup={{action "press"}}
           onfocus={{action "focus"}} onblur={{action "blur"}}>
    <i class="unit">{{unit}}</i>
  {{/if}}
  {{yield}}
</div>

